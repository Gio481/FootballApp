<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/matchDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green_500"
        android:textSize="@dimen/dimen_14_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="28 april" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/matchStadiumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_5_dp"
        android:textColor="@color/grey_400"
        android:textSize="@dimen/dimen_14_sp"
        app:layout_constraintStart_toEndOf="@id/matchDateTextView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Boris paichadze" />

</androidx.constraintlayout.widget.ConstraintLayout>